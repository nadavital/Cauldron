{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ],
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run build"
            ]
        }
    ],
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/recipe/**",
                "function": "previewRecipe"
            },
            {
                "source": "/u/*/*",
                "function": "previewRecipe"
            },
            {
                "source": "/u/*",
                "function": "previewProfile"
            },
            {
                "source": "/profile/**",
                "function": "previewProfile"
            },
            {
                "source": "/collection/**",
                "function": "previewCollection"
            },
            {
                "source": "/api/**",
                "function": "api"
            }
        ],
        "headers": [
            {
                "source": "/.well-known/apple-app-site-association",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            }
        ]
    }
}