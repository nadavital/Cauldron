{
  "version": 2,
  "name": "cauldron-api",
  "rewrites": [
    {
      "source": "/recipe/:shareId",
      "destination": "/api/preview/recipe/:shareId"
    },
    {
      "source": "/profile/:shareId",
      "destination": "/api/preview/profile/:shareId"
    },
    {
      "source": "/collection/:shareId",
      "destination": "/api/preview/collection/:shareId"
    }
  ],
  "env": {
    "FIREBASE_PROJECT_ID": "@firebase_project_id",
    "FIREBASE_CLIENT_EMAIL": "@firebase_client_email",
    "FIREBASE_PRIVATE_KEY": "@firebase_private_key"
  }
}
