{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RecipeSchemaDocument",
  "type": "object",
  "required": ["id", "source_type", "normalized_lines", "target_recipe"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "source_type": {
      "type": "string",
      "enum": ["url", "ocr", "ocr_failure", "manual_edge"]
    },
    "normalized_lines": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "target_recipe": {
      "type": "object",
      "required": ["title", "ingredients", "steps", "notes"],
      "properties": {
        "title": { "type": "string" },
        "ingredients": { "type": "array", "items": { "type": "string" } },
        "steps": { "type": "array", "items": { "type": "string" } },
        "notes": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
